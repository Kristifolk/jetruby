<% if user_signed_in? %>
    <p style="color: green"><%= notice %></p>

    <h1>Posts</h1>
    <p>
    <%= link_to "All post instagram", root_path %>
    <%= link_to "New post", new_post_path %>
    </p>
    <div id="posts">
    <% @my_posts.each do |post| %>
        <%= render post %>
        <p>
        <%= link_to "Show this post", post %>
        
        </p>
    <% end %>
    </div>

<% else %>
  <h1>Home</h1>
  <%= link_to 'Sign in', new_user_session_path %>
<% end %>

